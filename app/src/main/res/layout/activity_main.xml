<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guessGroup">
        <LinearLayout
            android:id="@+id/firstGuess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="15sp"
            android:layout_marginTop="15sp"
            android:gravity="end">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guess #1"
                android:textSize="25sp"
                android:layout_gravity="start"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/guess1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="TEST"
                android:gravity="end"
                android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/firstCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="15sp"
            android:layout_marginTop="15sp"
            android:visibility="gone"
            android:gravity="end">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guess #1 Check"
                android:textSize="25sp"
                android:layout_gravity="start"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/check1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="TEST"
                android:gravity="end"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/secondGuess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="15sp"
            android:layout_marginTop="15sp"
            android:gravity="end"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guess #2"
                android:textSize="25sp"
                android:layout_gravity="start"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/guess2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="TEST"
                android:gravity="end"
                android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/secondCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="15sp"
            android:layout_marginTop="15sp"
            android:gravity="end"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guess #2 Check"
                android:textSize="25sp"
                android:layout_gravity="start"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/check2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="TEST"
                android:gravity="end"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/thirdGuess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="15sp"
            android:layout_marginTop="15sp"
            android:gravity="end"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guess #3"
                android:textSize="25sp"
                android:layout_gravity="start"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/guess3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="TEST"
                android:gravity="end"
                android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/thirdCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="15sp"
            android:layout_marginTop="15sp"
            android:gravity="end"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guess #3 Check"
                android:textSize="25sp"
                android:layout_gravity="start"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/check3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="TEST"
                android:gravity="end"
                android:visibility="gone"/>
        </LinearLayout>

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/celebrateGif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/giphy"
            android:layout_weight="2"
            android:layout_marginHorizontal="45sp"
            android:layout_marginTop="40sp"
            android:visibility="gone"
            />
        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/sadGif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/giphy_sad"
            android:layout_weight="2"
            android:layout_marginHorizontal="25sp"
            android:layout_marginVertical="30sp"
            android:layout_marginTop="40sp"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/wrongHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Out of tries!"
            android:textAlignment="center"
            android:textSize="30sp"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="YOU WIN!!!"
            android:textAlignment="center"
            android:textSize="30sp"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/correctWord"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Hello World!"
            android:textSize="40sp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:gravity="center"
            tools:ignore="RtlCompat"
            android:layout_marginBottom="25sp"/>
    </LinearLayout>

    <Button
        android:id="@+id/restartButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="restart"
        app:layout_constraintTop_toBottomOf="@id/main"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginVertical="10sp"
        android:layout_marginHorizontal="15sp"
        android:visibility="gone"
        />

    <LinearLayout
        android:id="@+id/guessGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15sp"
        android:layout_marginHorizontal="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="bottom"
        android:layout_weight="1">
        <EditText
            android:id="@+id/guessField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15sp"
            android:hint="Enter your 4 letter guess..."
            android:maxLength="4"
            app:counterEnabled="true"
            android:layout_weight="1"
            android:inputType="textCapCharacters"
            />
        <Button
            android:id="@+id/submitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guess!"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>